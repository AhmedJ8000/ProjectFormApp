@using ProjectWebApp.ViewModel;
@model NewCategoryViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Category Management</h1>
<hr />

@{
    if (TempData["CreateSuccess"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["CreateSuccess"].ToString();
        </div>
    }
}

<div class="row">
    <div class="col-md-6">
        <h2>Search</h2>
        <form asp-action="Index">
            <div class="form-group">
                <label for="SearchString">Search Name:</label>
                <input type="text" class="form-control" name="SearchString" value="@Context.Request.Query["SearchString"].ToString()" placeholder="Enter category name">
            </div>
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
    </div>
    <div class="col-md-6">
        <h2>Manage Categories</h2>
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square-fill" viewBox="0 0 16 16">
                <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zm6.5 4.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3a.5.5 0 0 1 1 0" />
            </svg>
            Create Category
        </a>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Action</th>
            <th>Category ID</th>
            <th>Category Name</th>
            <th>Description</th>
            <th>Manager</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var category in Model.Categories)
            {
                <tr>
                    <td>
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-secondary mx-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                            </svg>
                            Edit
                        </a>
                    </td>
                    <td>@category.CategoryId</td>
                    <td>@category.CategoryName</td>
                    <td>@category.Description</td>
                    <th>@category.Manager.Name</th>
                </tr>
            }
        }
    </tbody>
</table>